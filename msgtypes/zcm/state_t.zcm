/**
 * ZCM type for GNC state
 */
struct state_t
{
	int64_t utime;

	// TODO: Increase this to estimate more variables
	const int32_t DoF = 15;

	double covariance[DoF][DoF];

	// State variables
	double attitude[4];
	double position[3];
	double velocity[3];

	// Control inputs
	double angular_velocity[3];
	double acceleration[3];

	// Biases
	double gyro_biases[3];
	double accel_biases[3];

	// World properties
	double gravity[3];
	double magnetic_field[3];
}
